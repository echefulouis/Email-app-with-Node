    <form class="mt-5 mb-5 list-group container-fluid w-50" action="/user/sendmail" method="POST">
        <h1>Confirm Details</h1>
        <!-- <div class="form-group">
          <label for="disabledTextInput">Recipient Name:</label>
          <input type="text" id="disabledTextInput" value='<%=data.name%>' name='recipientName' class="form-control" placeholder="Disabled input" readonly="readonly">
        </div>
         -->
        <div class="form-group">
          <label for="disabledTextInput">Recipient Email:</label>
          <input type="text" id="disabledTextInput" value='<%=data.email%>' name='recipientEmail' class="form-control" readonly="readonly" >
        </div>

        <div class="form-group">
          <label for="disabledTextInput">Subject:</label>
          <input type="text" id="disabledTextInput" value='<%=data.subject%>' name='subject' class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
          <label for="disabledTextInput">Template:</label>
          <input type="text" id="disabledTextInput" value='<%=data.template%>' name='template' class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
          <label for="disabledTextInput">Sender's Name:</label>
          <input type="text" id="disabledTextInput" value='<%=data.name%>' name='senderName' class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
          <label for="disabledTextInput">Sender's Email:</label>
          <input type="text" id="disabledTextInput" value='<%=projects[0].dataValues.email%>' name='senderEmail' class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
          <label for="disabledTextInput">Host:</label>
          <input type="text" id="disabledTextInput" value='<%=projects[0].dataValues.host%>' name='host' class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
          <label for="disabledTextInput">Port:</label>
          <input type="text" id="disabledTextInput" value='<%=projects[0].dataValues.port%>' name='port' class="form-control" readonly="readonly">
        </div>
      <button class="btn btn-primary my-2 my-sm-0 w-20" type="submit" style="max-width: 100px ;">Send Mail</button>
    </form>



</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
